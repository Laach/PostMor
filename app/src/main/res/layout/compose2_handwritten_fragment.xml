<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Compose.Compose2Handwritten">

    <fragment
        android:id="@+id/c2hand_Recipient"
        android:name="com.mdhgroup2.postmor.Compose.RecipientFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/recipient_fragment" />

    <Button
        android:id="@+id/c2hand_Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="@string/send_button"
        app:layout_constraintEnd_toEndOf="@+id/c2hand_AddItemFragment"
        app:layout_constraintTop_toBottomOf="@+id/c2hand_AddItemFragment" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/compose2HandwrittenRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c2hand_divider"

        />

    <fragment
        android:id="@+id/c2hand_AddItemFragment"
        android:name="com.mdhgroup2.postmor.Compose.Compose2AddItemFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compose2HandwrittenRecyclerView"
        tools:layout="@layout/compose2_add_item_fragment" />

    <TextView
        android:id="@+id/c2hand_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/compose_choose_pictures"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c2hand_Recipient" />

    <View
        android:id="@+id/c2hand_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c2hand_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>