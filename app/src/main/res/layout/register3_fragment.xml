<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register.register3">

    <TextView
        android:id="@+id/register_password_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/register_3_description"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_password_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/enter_password_label"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@+id/register_password_confirm_text"
        app:layout_constraintStart_toStartOf="@+id/register_password_confirm_text"
        app:layout_constraintTop_toBottomOf="@+id/register_password_info" />

    <TextView
        android:id="@+id/register_password_confirm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_password_label"
        app:layout_constraintBaseline_toBaselineOf="@+id/register_password_confirm_input"
        app:layout_constraintStart_toStartOf="@+id/register_password_info" />

    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBaseline_toBaselineOf="@+id/register_password_text"
        app:layout_constraintEnd_toEndOf="@+id/register_password_info"
        app:layout_constraintStart_toEndOf="@+id/register_password_text" />

    <EditText
        android:id="@+id/register_password_confirm_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/register_password_input"
        app:layout_constraintStart_toEndOf="@+id/register_password_confirm_text"
        app:layout_constraintTop_toBottomOf="@+id/register_password_input" />

    <TextView
        android:id="@+id/register_password_hint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#F44336"
        app:layout_constraintStart_toStartOf="@+id/register_password_confirm_text"
        app:layout_constraintTop_toBottomOf="@+id/register_password_confirm_input" />

    <TextView
        android:id="@+id/register_password_hint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        app:layout_constraintStart_toStartOf="@+id/register_password_confirm_text"
        app:layout_constraintTop_toBottomOf="@+id/register_password_hint1" />

    <TextView
        android:id="@+id/register_password_hint3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        app:layout_constraintStart_toStartOf="@+id/register_password_confirm_text"
        app:layout_constraintTop_toBottomOf="@+id/register_password_hint2" />

    <TextView
        android:id="@+id/register_password_hint4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        app:layout_constraintStart_toStartOf="@+id/register_password_confirm_text"
        app:layout_constraintTop_toBottomOf="@+id/register_password_hint3" />

    <TextView
        android:id="@+id/register_password_hint5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        app:layout_constraintStart_toStartOf="@+id/register_password_confirm_text"
        app:layout_constraintTop_toTopOf="@+id/register_password_hint6" />

    <TextView
        android:id="@+id/register_password_hint6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        app:layout_constraintStart_toStartOf="@+id/register_password_confirm_text"
        app:layout_constraintTop_toBottomOf="@+id/register_password_hint4" />

    <Button
        android:id="@+id/register_prev_button"
        style="@style/Whitebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/previous_button"
        android:textColor="@color/colorCancelButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/register_submit_button"
        style="@style/Whitebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/register_3_submit_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>